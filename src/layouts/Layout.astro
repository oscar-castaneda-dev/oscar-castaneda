---
import { ViewTransitions } from "astro:transitions";
import '@fontsource-variable/inter';

import Header from "@components/Header.astro";
import SEO from "@components/SEO.astro";
import Footer from "@components/Footer.astro";

interface Props {
  author?: string;
  coverImage?: string;
  description?: string;
  url?: string;
  title?: string;
}

const { author, coverImage, description, url, title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <ViewTransitions />
    <SEO {author} {coverImage} {description} {url} {title} />
  </head>
  <body class="container mx-auto min-h-screen grid grid-rows-[auto,1fr,auto]">
    <Header />
    <slot />
    <Footer />
  </body>
</html>
